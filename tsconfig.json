{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "types": ["react", "react-dom", "react-router-dom"], // Add React types
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowJs": true, // Allow .js and .jsx files
    "noEmit": true, // Prevent TypeScript from emitting files (Vite handles this)
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"] // Process files in src directory
}